---
import { YouTube } from '@astro-community/astro-embed-youtube';

interface Props {
  id: string;
  title: string;
  poster?: string;
  paramsYoutube?: string;
}

const { id, title, poster, paramsYoutube } = Astro.props;
---

<YouTube id={id} title={title} poster={poster} params={paramsYoutube} />

<style is:inline>
  lite-youtube {
    max-width: 100%;
  }
  lite-youtube::before {
    background-repeat: initial;
    height: 100%;
    padding-bottom: 0;
  }
</style>
